<h1>Create new Source</h1>

<% form_for @source do |f| %>
  
  <div>
    <%= f.error_messages %>
  </div>
  
  <p>
    <label>Name</label>
    <%= f.text_field :name %>
  </p>
  
  <p>
    <label>Channel id <%= "(#{@channel.name})" if @channel %></label>
    <%= f.text_field :channel_id %>
  </p>
  
  <p>
    <label>Url (only rss for now)</label>
    <%= f.text_field :url %>
  </p>
  
  <p>
    <%= f.submit 'Create' %>
  </p>
  
<% end %>